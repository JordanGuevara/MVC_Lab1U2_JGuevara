@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Inicio de Sesión</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label for="user" class="form-label">Usuario</label>
                            @Html.TextBox("user", null, new { @class = "form-control", id = "user", placeholder = "Ingrese su usuario", autofocus = "autofocus", autocomplete = "username" })
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Contraseña</label>
                            @Html.Password("password", null, new { @class = "form-control", id = "password", placeholder = "Ingrese su contraseña", autocomplete = "current-password" })
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-semibold">Ingresar</button>
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-4" role="alert" aria-live="polite">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
